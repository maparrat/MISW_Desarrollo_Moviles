<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="album"
            type="com.example.vinilos.model.MusicianModel"
            />
    </data>

    <LinearLayout
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:padding="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/artistNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artista :"
            android:layout_marginTop="20dp" />
        <TextView

            android:id="@+id/artistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/artistDateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nacido el dia :"
             />

        <TextView
            android:id="@+id/artistDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            />





        <TextView
            android:id="@+id/artistGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />



        <TextView
            android:id="@+id/artistRecordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historia del artista :"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/artistDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />






    </LinearLayout>
</layout>